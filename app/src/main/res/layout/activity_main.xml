<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <View
        android:id="@+id/view10"
        android:layout_width="414dp"
        android:layout_height="747dp"
        android:background="#DEE6FF"
        tools:layout_editor_absoluteY="-8dp" />

    <TableLayout
        android:id="@+id/table_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B1EAFF"
        android:textColor="#079dd0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/turnTextView">

        <TableRow
            android:id="@+id/r0"
            style="@style/TableRow"
            android:background="#B87AFF">

            <TextView
                style="@style/Cell.Left"
                android:layout_marginTop="0dp"
                 />

            <TextView
                style="@style/Cell.Middle"
                android:layout_marginTop="0dp" />

            <TextView
                style="@style/Cell.Right"
                android:layout_marginTop="0dp" />

            <TextView
                style="@style/Cell.Another"
                android:layout_marginTop="0dp" />

        </TableRow>


        <TableRow
            android:id="@+id/r1"
            style="@style/TableRow"
            android:background="#B87AFF">

            <TextView style="@style/Cell.Left" />


            <TextView style="@style/Cell.Middle" />


            <TextView style="@style/Cell.Right" />

            <TextView style="@style/Cell.Another" />
        </TableRow>


        <TableRow
            android:id="@+id/r2"
            style="@style/TableRow"
            android:background="#B87AFF">

            <TextView style="@style/Cell.Left" />

            <TextView style="@style/Cell.Middle" />

            <TextView style="@style/Cell.Right" />

            <TextView style="@style/Cell.Another" />

        </TableRow>

        <TableRow
            android:id="@+id/r3"
            style="@style/TableRow"
            android:background="#B87AFF">

            <TextView
                style="@style/Cell.Left"
                android:layout_marginBottom="0dp" />

            <TextView
                style="@style/Cell.Middle"
                android:layout_marginBottom="0dp" />

            <TextView
                style="@style/Cell.Right"
                android:layout_marginBottom="0dp"
                android:background="#FFFFFF" />

            <TextView
                style="@style/Cell.Another"
                android:layout_marginBottom="0dp" />

        </TableRow>
    </TableLayout>


    <TextView
        android:id="@+id/turnTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bubblegum_sans"
        android:text="@string/turn"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/xScore"
        android:layout_width="132dp"
        android:layout_height="36dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139" />

    <TextView
        android:id="@+id/oscore"
        android:layout_width="131dp"
        android:layout_height="39dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14" />

    <TextView
        android:id="@+id/TimerText"
        android:layout_width="403dp"
        android:layout_height="40dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.879" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bubblegum_sans"
        android:text="@string/resetButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

</androidx.constraintlayout.widget.ConstraintLayout>